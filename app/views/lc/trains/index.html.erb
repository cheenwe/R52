<p id="notice"><%= notice %></p>

<h1>Lc Trains</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lc_trains.each do |lc_train| %>
      <tr>
        <td><%= lc_train.uuid %></td>
        <td><%= lc_train.code %></td>
        <td><%= lc_train.name %></td>
        <td><%= link_to 'Show', lc_train %></td>
        <td><%= link_to 'Edit', edit_lc_train_path(lc_train) %></td>
        <td><%= link_to 'Destroy', lc_train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

