<div class="weui-tab">

    <header class="demos-header">
        <h1 class="demos-title">官网更新</h1>
        <p class="demos-sub-title">点击‘提交升级’即可.</p>
    </header>

    <div class="weui-panel weui-panel_access">
        <div class="weui-grids">
            <a href="/sy/configs" class="weui-grid">
                <div class="weui-grid__icon">
                    <img src="<%= image_path('mobile/icon_nav_new.png') %>" alt="">
                </div>
                <p class="weui-grid__label">配置地址</p>
            </a>


            <form action="/website" accept-charset="UTF-8" data-remote="true" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <a class="weui-grid">
                    <div class="weui-grid__icon">
                        <button type="submit" id="reply-button" class="weui-grid__label" data-disable-with="提交中..">
                            <img src="<%= image_path('mobile/icon_nav_up.png') %>" alt="">
                        </button>
                    </div>
                    <p class="weui-grid__label">提交升级</p>
                </a>
            </form>

            <a href="/" class="weui-grid">
                <div class="weui-grid__icon">
                    <img src="<%= image_path('mobile/icon_nav_cell.png') %>" alt="">
                </div>
                <p class="weui-grid__label">Home</p>
            </a>
        </div>
    </div>

</div>